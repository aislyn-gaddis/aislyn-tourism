{% extends '_templates/base.njk' %}

{% block page_title %}Restaurants{% endblock %}

{% block page_description %}The description for this page goes here.{% endblock %}

{% block content %}
<article class="container">
  <header class="alert alert-info mb-5 col-sm-12 col-md-12 col-lg-10 offset-lg-1">
    <h1 class="display-4 mb-2">Essential Austin Restaurants</h1>
    <h5>Austin is a city known for its food. When you visit, make sure you visit some of these! </h5>
  </header>
  <div class="row">
  {% for restaurant in restaurants.restaurants %}
    <div class="col-sm-6 col-lg-4">
      <div class="card border-info mb-4">
        <img class="card-img-top" src="img/restaurants/{{ restaurant.image }}" alt="{{ restaurant.name }}">
        <div class="card-body">
          <h5 class="card-title mb-3">{{ restaurant.name }}</h5>
          <h6 class="card-subtitle mb-2">{{ restaurant.address }}</h6>
          <h6 class="card-text">{{ restaurant.category }}</h6>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</article>

{% endblock %}