{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %}{{ name }} about page{% endblock %}

{% block content %}
  <article class="container">
      <div class="row">
        <h1 class="offset-lg-1 mb-3">{{ name }}</h1>
        <div class="col-sm-12 col-md-8 col-lg-7 offset-lg-1">
          <img src="../img/landmarks/{{ image }}" alt="{{ name }}" class="img-fluid mb-3">
        </div>
        <div class="col-sm-12 col-md-4 col-lg-3">
          <h5 class="mb-4">{{ established }}</h5>
          <h5 class="mb-4">{{ location }}</h5>
          <h5 class="mb-4">{{ activities }}</h5>
          <h5 class="mb-4"><a href="{{url}}" target="blank">Learn More</a></h5>
        </div>
        <div class="col-sm-12 col-md-10 col-lg-8 offset-lg-1"> 
        {{ description | safe }}
        </div>
        <hr>
      </div>
    </article>
{% endblock %}
